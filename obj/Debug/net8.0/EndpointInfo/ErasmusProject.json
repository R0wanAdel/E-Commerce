            "type": "string",
            "nullable": true
          },
          "Description": {
            "type": "string",
            "nullable": true
          },
          "Price": {
            "type": "number",
            "format": "double"
          },
          "Stock": {
            "type": "integer",
            "format": "int32"
          },
          "AdminId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ProductUpdateDTO": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string",
            "nullable": true
          },
          "Description": {
            "type": "string",
            "nullable": true
          },
          "Price": {
            "type": "number",
            "format": "double"
          },
          "Stock": {
            "type": "integer",
            "format": "int32"
          },
          "AdminId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "RegistrationDTO": {
        "required": [
          "Address",
          "Email",
          "FirstName",
          "LastName",
          "Password",
          "PhoneNumber"
        ],
        "type": "object",
        "properties": {
          "FirstName": {
            "minLength": 1,
            "type": "string"
          },
          "LastName": {
            "minLength": 1,
            "type": "string"
          },
          "Email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "Password": {
            "maxLength": 100,
            "minLength": 8,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*#?&]).{8,}$",
            "type": "string",
            "format": "password"
          },
          "Address": {
            "minLength": 1,
            "type": "string"
          },
          "PhoneNumber": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
